                    <br><br>
                    <span style="padding-bottom: 15px; font-size: 14px;"> &copy; 2020 Google LLC</span>
                </div>
            </ul>
        </div>
        <section>
            <div class="main-content">
                <div class="section-offer">
                    <h1>Đề xuất</h1>
                    <form action="/add-video" method="POST">
                        <input type="text" name="link">
                        <input type="text" name="img">
                        <input type="text" name="title">
                        <input type="text" name="channel">
                        <input type="text" name="view">
                        <button type="submit">Tạo Video</button>
                    </form>
                    <form action="/fix-video" method="POST">
                        <input type="text" name="title" placeholder="Tên cũ">
                        <input type="text" name="fixTitle" placeholder="Tên mới">
                        <button type="submit">Sửa Title Video</button>
                    </form>
                    <form action="/del-video" method="POST">
                        <input type="text" name="title" placeholder="Tên video">
                        <input type="text" name="channel" placeholder="Tên kênh">
                        <button type="submit">Xoá Video</button>
                    </form>
                    <div class="row coofer">
                        <% for (let i = 0; i < results.length; i++) { %>
                            <div class="col-md-3">
                                <iframe width="560" height="315" src="<%= results[i].link %>" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                                <div class="content">
                                    <div class="icon-avatar">
                                        <img src="<%= results[i].img %>" alt="avatar">
                                    </div>
                                    <div class="text">
                                        <h2>
                                            <%= results[i].title %>
                                        </h2>
                                        <span class="verified"><%= results[i].channel %></span><br>
                                        <span><%= results[i].view %></span>
                                    </div>
                                </div>
                            </div>
                            <% } %>
                    </div>
                </div>
            </div>
        </section>
    </div>

    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
</body>

</html>