    <title>Danh sách todo</title>
    <link rel="stylesheet" href="css/style.css">
    <link rel="stylesheet" href="css/bootstrap.min.css">
</head>

<body>
    <div class="outer-main">
        <header>
            <div class="start">
                <img src="img/icon/icon-4.png" alt="icon">
                <img src="img/icon/icon-youtube.png" alt="icon">
            </div>
            <div class="center">
                <form action="/search-video" method="POST">
                    <input type="text" placeholder="Tìm kiếm">
                    <button type="submit">
                        <img src="img/icon/icon-1.png" alt="icon search">
                    </button>
                </form>
                <span class="keyboard"></span>
            </div>
            <div class="end">
                <img src="img/icon/icon-2.png" alt="icon">
                <img src="img/icon/icon-3.png" alt="icon">
                <img src="img/icon/icon-6.png" alt="icon">
                <div class="avatar"></div>
            </div>
        </header>

        <div class="side-bar">
            <ul>
                <li class="active">
                    <span class="img">
                        <img src="img/icon/icon-side-01.png" alt="icon">
                    </span>
                    <span class="text">Trang chủ</span>
                </li>
                <li>
                    <span class="img">
                        <img src="img/icon/icon-side-02.png" alt="icon">
